{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <h1 class="mb-4 font-weight-normal text-uppercase fs-3">Connexion</h1>
            <input type="email" value="{{ last_username }}" name="email" class="form-control mb-3" autocomplete="email" required autofocus placeholder="Email">
            <input type="password" name="password" class="form-control mb-3" autocomplete="current-password" required placeholder="Mot de passe">

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvient de moi
                </label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}
